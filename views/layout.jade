doctype html
html
  head
    title= title
    link(rel='icon' type='image/x-icon' href='/images/webkite_favicon.ico')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='http://code.jquery.com/jquery-2.1.0.min.js', type='application/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js', type='application/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/ember.js/1.5.1/ember.js', type='application/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/ember-data.js/1.0.0-beta.7/ember-data.js', type='application/javascript')
    script(src='//localhost:1460/javascripts/ember.oauth2.min.js', type='application/javascript')
    script(type='application/javascript').
      // TODO: put the config urls somewhere better
      var authUrl = "#{authUrl}";
      var adminUrl = "#{adminUrl}";

  body
    block content

    script(src='javascripts/application.js', type='application/javascript')
    script(src='javascripts/models/theme.js', type='application/javascript')
    script(src='javascripts/models/useCase.js', type='application/javascript')
    script(src='javascripts/models/user.js', type='application/javascript')
    script(src='javascripts/models/helpers.js', type='application/javascript')
    script(src='javascripts/controllers/themesController.js', type='application/javascript')
    script(src='javascripts/controllers/useCasesController.js', type='application/javascript')
    script(src='javascripts/router.js', type='application/javascript')

    script(type='application/javascript').
      Ember.OAuth2.config = {
        webkite: {
          clientId: "#{clientId}",
          authBaseUri: "http://#{authUrl}/account/auth/google",
          redirectUri: "http://localhost:1460/oauth/callback"
        }
      }
